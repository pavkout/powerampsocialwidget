<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="match_parent">
	<EditText android:id="@+id/pattern" android:layout_width="match_parent"
		android:layout_height="wrap_content" android:inputType="textMultiLine">
		<requestFocus></requestFocus>
	</EditText>
	<LinearLayout android:layout_width="match_parent"
		android:layout_height="wrap_content" android:id="@+id/linearLayout1">
		<Button android:id="@+id/okconfig" android:layout_height="wrap_content"
			android:text="Confirm" android:layout_width="wrap_content"></Button>
		<Button android:id="@+id/restore" android:layout_height="wrap_content"
			android:text="Restore default" android:layout_width="wrap_content"></Button>
	</LinearLayout>

</LinearLayout>
